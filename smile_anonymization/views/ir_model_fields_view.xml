<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_model_fields_form">
            <field name="name">ir.model.fields.form</field>
            <field name="model">ir.model.fields</field>
            <field name="inherit_id" ref="base.view_model_fields_form"/>
            <field name="arch" type="xml">
                <field name="modules" position="after">
                    <label for="data_mask" attrs="{'invisible': [('ttype', 'in', ('many2one', 'many2many', 'one2many'))]}"/>
                    <div attrs="{'invisible': [('ttype', 'in', ('many2one', 'many2many', 'one2many'))]}">
                        <field name="data_mask"/>
                        <button name="toggle_data_mask_locked" type="object" string="Unlock" attrs="{'invisible': [('data_mask_locked', '=', True)]}"/>
                        <button name="toggle_data_mask_locked" type="object" string="Lock" attrs="{'invisible': [('data_mask_locked', '=', False)]}"/>
                        <field name="data_mask_locked" invisible="1"/>
                    </div>
                </field>
            </field>
        </record>

    </data>
</openerp>
