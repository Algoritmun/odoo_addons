<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_model_fields_form">
            <field name="name">ir.model.fields.form</field>
            <field name="model">ir.model.fields</field>
            <field name="inherit_id" ref="base.view_model_fields_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='field_description']" position="after">
                          <field name="data_mask" attrs="{'invisible': [('ttype', 'in', ('many2one', 'many2many', 'one2many', 'selection'))]}"/>
                       <button name="toggle_data_mask_locked" type="object" string="Unlock"
                            attrs="{'invisible': ['|', ('data_mask_locked', '=', True), ('ttype', 'in', ('many2one', 'many2many', 'one2many', 'selection'))]}"/>
                        <button name="toggle_data_mask_locked" type="object" string="Lock"
                            attrs="{'invisible': ['|', ('data_mask_locked', '=', False), ('ttype', 'in', ('many2one', 'many2many', 'one2many', 'selection'))]}"/>
                        <field name="data_mask_locked" invisible="1"/>
                 </xpath>
            </field>
        </record>

    </data>
</openerp>
